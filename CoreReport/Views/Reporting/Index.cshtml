@model CoreReport.ViewModels.ReportingViewModel
@{
    ViewBag.Title = "Index";
}

<div class="side-app">
    <!-- Row -->
    <div class="row">
        <div class="col-md-4 col-lg-4">
            <div class="card">
                <div class="card-header">
                    <div>
                        <h3 class="card-title">Reports List</h3>
                    </div>
                </div>
                <div class="card-body" style="max-height:100% !important">
                    <div class="table-responsive">
                        <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                            <div class="row">
                                <div class="col-sm-12 col-md-12">
                                    @foreach (var firstLevel in Model.ReportingTreeViews)
                                    {
                                        <a class="showReportParameterFor" action="@Url.Action("ReportView", "Reporting", new { SlNo = firstLevel.SlNo })">@firstLevel.ReportName [@firstLevel.SlNo]</a><br />
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8 col-lg-8">
            <div class="card">
                <div class="card-header">
                    <div>
                        <h3 class="card-title">Report Parameter</h3>
                    </div>
                </div>
                <div class="card-body" style="max-height:100% !important">
                    <div class="table-responsive">
                        <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                            <div class="row">
                                <div class="col-sm-12 col-md-12">
                                    <div class="pull-left" id="reportContainner"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script src="~/Scripts/APP/treeView.js"></script>
    <script type="text/javascript">
        $('.showReportParameterFor').click(function () {
            var url = $(this).attr('action');
            $('#reportContainner').load(url);
        });
    </script>
}