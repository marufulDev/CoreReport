@model CoreReport.ViewModels.ReportingViewModel
@{
    ViewBag.Title = "ReportView";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
}
<link href="~/CommonDesign/commonBootStrap.css" rel="stylesheet" />
<link href="~/Content/Popup/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Content/Popup/jquery-1.7.1.min.js"></script>
<script src="~/Content/Popup/jquery-ui-1.8.20.min.js"></script>
@using (Html.BeginForm("AspReport", "Reporting", FormMethod.Post, new { @class = "Reporting", target = "_blank" }))
{
    @Html.HiddenFor(x => x.SlNo)
    @Html.HiddenFor(x => x.ReportPath)
    @Html.HiddenFor(x => x.Qryname)
    @Html.HiddenFor(x => x.xmlTableName)
    <h5>@Model.ReportName</h5>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <div class="col-md-12">
                    @foreach (var par in Model.Parameters)
                    {
                        if (par.Key.ToLower().Contains("date"))
                        {
                            <div class="col-sm-6 col-lg-6">
                                <div class="form-group">
                                    <label class="col-md-4">@Html.Label(par.Key)</label>
                                    <div class="col-md-8">

                                        @Html.TextBoxFor(x => x.Parameters[par.Key], "{0: dd MMMM yyyy}", new { @class = "textBoxsize form-control lrefFrom datepicker", placeholder = "Enter Date" })
                                    </div>
                                </div>
                            </div>

                        }
                        else
                        {
                            <div>
                                @Html.Label(par.Key)
                            </div>
                            <div>
                                @Html.TextBoxFor(x => x.Parameters[par.Key], new { @class = "textBoxsize form-control" })
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <div class="col-md-3">
                    <input type="submit" value="Print" formmethod="post" formaction="Reporting/Print" />
                </div>
            </div>
        </div>
    </div>

    <br />

}
@section Scripts
    {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.15.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.7.14/js/bootstrap-datetimepicker.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.7.14/css/bootstrap-datetimepicker.min.css">
    <script>
        $(function () {
            $('.datepicker').datetimepicker();
        });
    </script>
}